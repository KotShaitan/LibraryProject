{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build with g++",
            "type": "shell",
            "command": "C:/mingw/bin/g++.exe",
            "args": [
                "-std=c++17",
                "-I${workspaceFolder}/include",
                "-o",
                "${workspaceFolder}/build/app.exe",
                "${workspaceFolder}/src/main.cpp",
                "-lws2_32",
                "-lpthread"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}